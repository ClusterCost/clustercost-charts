{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      },
      "required": [
        "repository"
      ],
      "additionalProperties": false
    },
    "clusterName": {
      "type": "string"
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "namespace": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "annotations": {
          "$ref": "#/definitions/labelMap"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "commonLabels": {
      "$ref": "#/definitions/labelMap"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "annotations": {
          "$ref": "#/definitions/labelMap"
        }
      },
      "required": [
        "type",
        "port"
      ],
      "additionalProperties": false
    },
    "resources": {
      "type": "object"
    },
    "nodeSelector": {
      "$ref": "#/definitions/labelMap"
    },
    "affinity": {
      "type": "object"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "priorityClassName": {
      "type": "string"
    },
    "podLabels": {
      "$ref": "#/definitions/labelMap"
    },
    "podAnnotations": {
      "$ref": "#/definitions/labelMap"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "pod": {
      "type": "object",
      "properties": {
        "hostNetwork": {
          "type": "boolean"
        },
        "hostPID": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "securityContext": {
      "type": "object"
    },
    "env": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/envVar"
      }
    },
    "livenessProbe": {
      "$ref": "#/definitions/probe"
    },
    "readinessProbe": {
      "$ref": "#/definitions/probe"
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "labelMap": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "envVar": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "valueFrom": {
          "type": "object"
        }
      },
      "required": [
        "name"
      ],
      "anyOf": [
        {
          "required": [
            "value"
          ]
        },
        {
          "required": [
            "valueFrom"
          ]
        }
      ],
      "additionalProperties": true
    },
    "probe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "httpGet": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "port": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "required": [
            "path",
            "port"
          ],
          "additionalProperties": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1
        },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 1
        },
        "failureThreshold": {
          "type": "integer",
          "minimum": 1
        },
        "successThreshold": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "enabled"
      ],
      "additionalProperties": true
    }
  }
}